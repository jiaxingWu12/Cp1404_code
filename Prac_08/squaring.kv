BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label  # Give an id to the Label
            font_size: 48
            color: (1, 0, 1, 1)  # Pink color for the output label

    Label:
        size_hint_y: None
        height: 50
        text: 'Enter a number and press "Square"'
